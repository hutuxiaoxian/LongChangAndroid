    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/group"
            android:layout_weight=".34"
            android:text="@string/search_comple_edit_register" />

        <EditText
            android:id="@+id/search_comple_edit_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/group"
            android:layout_marginRight="@dimen/group"
            android:layout_marginTop="@dimen/group"
            android:layout_weight=".66"
            android:background="@drawable/js_srk"
            android:ems="10"
            android:hint="@string/search_comple_edit_register" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/group"
            android:layout_weight=".34"
            android:text="@string/search_comple_edit_name" />

        <EditText
            android:id="@+id/search_comple_edit_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/group"
            android:layout_marginRight="@dimen/group"
            android:layout_marginTop="@dimen/group"
            android:layout_weight=".66"
            android:background="@drawable/js_srk"
            android:ems="10"
            android:hint="@string/search_comple_edit_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/group"
            android:layout_weight=".34"
            android:text="@string/search_comple_edit_people" />

        <EditText
            android:id="@+id/search_comple_edit_people"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/group"
            android:layout_marginRight="@dimen/group"
            android:layout_marginTop="@dimen/group"
            android:layout_weight=".66"
            android:background="@drawable/js_srk"
            android:ems="10"
            android:hint="@string/search_comple_edit_people" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/group"
            android:layout_weight=".34"
            android:text="查找方式" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/group"
            android:layout_marginRight="@dimen/group"
            android:layout_marginTop="@dimen/group"
            android:layout_weight=".66" 
            android:background="#efefef">

            <Spinner
                android:id="@+id/search_comple_spinner"
                style="@style/AppBaseTheme"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="2dp" 
                android:background="#F9F9F9"/>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/search_comple_bt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/group"
        android:layout_marginRight="@dimen/group"
        android:layout_marginTop="@dimen/group"
        android:background="@color/search_bt_bg"
        android:text="@string/search_comple_bt_search"
        android:textColor="@color/bt_font" />

</LinearLayout>