<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical" >

    <com.hutu.longchang.widget.HeadTitleView
        android:id="@+id/trade_manager_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.hutu.longchang.widget.HeadTitleView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/group"
            android:layout_weight=".34"
            android:text="国际分类号:" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/group"
            android:layout_marginRight="@dimen/group"
            android:layout_marginTop="@dimen/group"
            android:layout_weight=".66"
            android:background="@drawable/js_srk" >

            <Button
                android:id="@+id/bangzhu_btn"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_help" />

            <EditText
                android:id="@+id/search_comple_edit_classify"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_toLeftOf="@id/bangzhu_btn"
                android:background="@null"
                android:ems="10"
                android:hint="@string/search_comple_edit_classify"
                android:text="" >
            </EditText>
        </RelativeLayout>
    </LinearLayout>

