<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="#F9F9F9">

    <com.hutu.longchang.widget.HeadTitleView 
        android:id="@+id/trade_manager_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
    </com.hutu.longchang.widget.HeadTitleView>
	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/group"
        android:layout_marginRight="@dimen/group"
        android:layout_marginTop="@dimen/group" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="国际分类号:" />
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:background="#ffffff">
            <EditText
            android:id="@+id/search_same_edit_classify"
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="fill_parent"
            android:background="@null"
            android:ems="10"
            android:hint="@string/search_comple_edit_classify" 
            android:text="01">
        </EditText>
        <Button
            android:id="@+id/info_btn"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="fill_parent"
            android:background="@drawable/ic_help"
            android:textColor="#FF00"/>
        </LinearLayout>
    </LinearLayout>
